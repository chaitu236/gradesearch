=render :partial=>'search_form'

%h3 Search results
-if @grades && @grades.count>0
	%table#results
		%thead
			%tr
				%th
					Year
				%th
					Sem
				%th
					Dept
				%th
					Course
				%th
					Instructor
				%th
					GPR
				%th
					A
				%th
					B
				%th
					C
				%th
					D
				%th
					F
				%th
					I
				%th
					S
				%th
					U
				%th
					Q
				%th
					X
				%th
					Total
		%tbody
			-@grades.each do |grade|
				%tr
					%td=grade.year
					%td=grade.sem
					%td=grade.dept
					%td=grade.courseno.to_s+'-'+grade.courseno2.to_s
					%td=grade.instructor
					%td=grade.gpr
					%td=grade.a
					%td=grade.b
					%td=grade.c
					%td=grade.d
					%td=grade.f
					%td=grade.i
					%td=grade.s
					%td=grade.u
					%td=grade.q
					%td=grade.x
					%td=grade.total
-else
	No results found!
